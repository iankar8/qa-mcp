{
  "name": "qa-mcp",
  "displayName": "QA MCP",
  "description": "Comprehensive QA testing for localhost applications with automated issue detection, console monitoring, and bug reporting",
  "version": "1.0.0",
  "author": "Ian Kar",
  "license": "MIT",
  "homepage": "https://github.com/iankar8/qa-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/iankar8/qa-mcp.git"
  },
  "keywords": [
    "qa",
    "testing",
    "localhost",
    "health-check",
    "console-monitoring",
    "bug-detection",
    "functional-testing",
    "automation",
    "claude-code"
  ],
  "mcpServers": {
    "qa-mcp": {
      "command": "node",
      "args": ["dist/index.js"],
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "runtime": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "package.json",
    "README.md"
  ],
  "capabilities": [
    "health-checks",
    "screenshot-capture",
    "log-monitoring",
    "endpoint-testing",
    "framework-detection",
    "report-generation"
  ],
  "platforms": {
    "darwin": {
      "supported": true
    },
    "win32": {
      "supported": true
    },
    "linux": {
      "supported": true
    }
  },
  "dependencies": {
    "puppeteer": "^21.0.0",
    "axios": "^1.6.0",
    "@modelcontextprotocol/sdk": "^0.5.0"
  }
}